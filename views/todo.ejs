<html>
    <head>
        <title>Todo List</title>
        <!--<script src="https://code.jquery.com/jquery-.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>-->
        <!-- public dir is served as static files with the middleware-->
        <link rel="stylesheet" href="/assets/styles.css" type="text/css">
    </head>
    <body>
    <h1>Todo List</h1>
    <h2><%= username %> Todo List</h2>
        <div id="todo-table">
            <!-- post are done on /todo -->
            <form id="todo_form" action="todo" method="post">
                <input id= "new_todo" type="text" name="item" placeholder="Add new item..." required />
                <button type="submit">Add item</button>
            </form>
        </div>
        <ul>
            <% for(var i = 0; i < toDos.length; i++) { %>
                <!-- .item comes from the view (form input) client-side when submitting the form, todo var {item:}-->
                <li><%= toDos[i].item %></li>
            <% } %>
        </ul>
    <script
            src="https://code.jquery.com/jquery-1.12.4.js"
            integrity="sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU="
            crossorigin="anonymous"></script>
    <script src="/main.js"></script>
    </body>
</html>